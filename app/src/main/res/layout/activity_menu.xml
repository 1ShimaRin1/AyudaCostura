<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEAE7"
    android:padding="24dp"
    tools:context=".ui.menu.MenuActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="48dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Clientes -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#7B3CBA"
        app:cornerRadius="12dp"
        app:icon="@drawable/baseline_people_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Pedidos -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pedidos"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#7B3CBA"
        app:cornerRadius="12dp"
        app:icon="@drawable/baseline_add_shopping_cart_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnClientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Materiales -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMateriales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Materiales"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#7B3CBA"
        app:cornerRadius="12dp"
        app:icon="@drawable/baseline_inventory_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Cerrar Sesión -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#D32F2F"
        app:cornerRadius="12dp"
        app:icon="@drawable/baseline_logout_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/tvUbicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto de ubicación -->
    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación: Cargando..."
        android:textColor="#444444"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
