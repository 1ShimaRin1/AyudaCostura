<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="28dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <!-- Título -->
    <TextView
        android:id="@+id/tvDialogTitulo"
        android:text="Eliminar cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvDialogMensaje"
        android:layout_marginTop="10dp"
        android:text="¿Seguro que deseas eliminar este cliente?"
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botones -->
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#9E9E9E"
            android:text="Cancelar"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:cornerRadius="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminarDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="14dp"
            android:layout_marginStart="6dp" />
    </LinearLayout>

</LinearLayout>
