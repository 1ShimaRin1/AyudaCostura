<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEAE7"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botón Volver -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Volver"
                android:textColor="@android:color/white"
                android:backgroundTint="#7B3CBA"
                app:cornerRadius="12dp"
                app:icon="@drawable/baseline_arrow_back_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />
        </RelativeLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar cliente"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Campo: Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del cliente"
            app:boxStrokeColor="#6A1B9A"
            app:hintTextColor="#6A1B9A">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#333333" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo: Teléfono -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono del cliente"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="#6A1B9A"
            app:hintTextColor="#6A1B9A"
            app:prefixText="+56 9 ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefonoEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="#333333"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Guardar Cambios -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textColor="@android:color/white"
            android:backgroundTint="#7B3CBA"
            app:cornerRadius="12dp"
            android:layout_marginTop="24dp" />

        <!-- Botón Cancelar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@android:color/white"
            android:backgroundTint="#A9A9A9"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
