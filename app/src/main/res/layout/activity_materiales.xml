<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBEAE7"
    android:padding="20dp"
    tools:context=".ui.materiales.MaterialesActivity">

    <!-- Botón Volver -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Volver"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </RelativeLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloMateriales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Materiales"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón Agregar Material -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgregarMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Material"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        app:icon="@drawable/baseline_add_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/searchViewMateriales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar Materiales..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:backgroundTint="#7B3CBA"
        android:textColor="#333333"
        android:textColorHint="#888888"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />


    <!-- Lista de materiales -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMateriales"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        tools:listitem="@layout/item_material" />

</LinearLayout>
