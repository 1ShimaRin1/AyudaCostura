<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen más grande -->
        <ImageView
            android:id="@+id/imgPrendaPedido"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombrePedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Pedido"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Tipo -->
        <TextView
            android:id="@+id/tvTipoCostura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de costura"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Medidas (se mostrarán aquí) -->
        <TextView
            android:id="@+id/tvMedidasPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medidas: N/A"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/holo_orange_dark" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompletarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMensajePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensaje"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:backgroundTint="#7B3CBA"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

