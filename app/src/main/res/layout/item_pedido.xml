<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Imagen del pedido (igual tamaño que materiales) -->
        <ImageView
            android:id="@+id/imgPrendaPedido"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD" />

        <!-- Nombre del pedido -->
        <TextView
            android:id="@+id/tvNombrePedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Pedido"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Tipo de costura -->
        <TextView
            android:id="@+id/tvTipoCostura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de costura"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Medidas -->
        <TextView
            android:id="@+id/tvMedidasPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medidas: N/A"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/holo_orange_dark" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btnEditarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textColor="@android:color/holo_blue_dark"
                android:padding="8dp" />

            <TextView
                android:id="@+id/btnEliminarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textColor="@android:color/holo_red_dark"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/btnCompletarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completar"
                android:textColor="@android:color/holo_green_dark"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/btnMensajePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensaje"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:background="#7B3CBA"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
