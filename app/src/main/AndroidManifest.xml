<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="@string/google_maps_key" /> <!-- ️ Permisos de ubicación e Internet -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AyudaCostura"
        tools:targetApi="31">
        <activity
            android:name=".ui.registros.RegistroActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pedidos.AgregarPedido"
            android:exported="false" />
        <activity
            android:name=".ui.clientes.AgregarCliente"
            android:exported="false" />
        <activity
            android:name=".ui.materiales.AgregarMaterial"
            android:exported="false" /> <!-- Pantalla inicial -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.materiales.MaterialesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.clientes.ClientesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pedidos.PedidosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.MainActivity"
            android:exported="false" />
    </application>

</manifest>